<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="ams">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    
    <class>com.ams.modelo.gestion_usuario.Menus</class>
    <class>com.ams.modelo.gestion_usuariocom.ams.modelo.gestion_usuario.Permisos</class>
    <class>com.ams.modelo.gestion_usuariocom.ams.modelo.gestion_usuario.Roles</class>
    <class>com.ams.modelo.gestion_usuariocom.ams.modelo.gestion_usuario.Roles</class>
    <class>com.ams.modelo.gestion_usuario.com.ams.modelo.gestion_usuario.RolesMenus</class>
    <class>com.ams.modelo.gestion_usuariocom.ams.modelo.gestion_usuario.Usuarios</class>

    <properties>
      <property name="javax.persistence.validation.mode" value="NONE"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/ams_development"/>
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
      <property name="hibernate.default_schema" value="public"/>
      <property name="hibernate.connection.username" value="ams"/>
      <property name="hibernate.connection.password" value="12345678"/>
    </properties>
  </persistence-unit>
</persistence>
